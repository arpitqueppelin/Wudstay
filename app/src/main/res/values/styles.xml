<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/header_color</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
    </style>

    <style name="appbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/app_text_color</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:textColorSecondary">@color/button_bg</item>
        <item name="android:background">@color/header_color</item>
    </style>

</resources>
